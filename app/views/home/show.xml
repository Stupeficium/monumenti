<Alloy>
	<Window class="container" id="show" title="Monumento">
		<ScrollView id="scrollable" class="vertical-scroll">
			<ActivityIndicator id="activityIndicator" />
			<ImageView id="image"></ImageView>
			<Label id="title" />
			<Label id="description" />
			<Label id="address" />
			<Button id="Upload">Carica le tue foto</Button>
			<Label id="Alert">Partecipano a Wiki Loves Monuments solo le foto caricate dall'1 al 30 settembre.</Label>
			<Button id="Osm_button">Indicazioni stradali</Button>
			<Button id="Info">Maggiori informazioni</Button>
			<Button id="Wikipedia">Voce su Wikipedia</Button>
			<Module id="mapview" module="ti.map" method="createView" if="OS_IOS" />
			<OSMView module="ti.osm" id="osm" if="OS_ANDROID" />
		</ScrollView>
	</Window>
</Alloy>