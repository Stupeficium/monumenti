<Alloy>
	<Window titleid="photo_upload" class="vertical" id="title" hidesBackButton="true">
		<View class="view">
			<ActivityIndicator id="activityIndicator" />
			<ScrollView class="vertical-scroll">
				<View id="photospace" class="vertical" height="Ti.UI.SIZE" />
				<View id="other_space" class="vertical" height="Ti.UI.SIZE">
					<Label id="license" textid="license_acceptance" />
					<Label color="#16ABFD" id="license_link" textid="license_link_text" />
					<Button id="conferma" titleid="confirm_upload" />
					<Button id="annulla" titleid="stop_upload" />
				</View>
			</ScrollView>
		</View>
	</Window>
</Alloy>